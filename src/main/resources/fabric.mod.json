{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",
  "name": "${name}",
  "description": "This mod will automatically try to reconnect you back to a server if you got disconnected.\\nBy default, it will make 4 attempts after 3, 10, 30 and 60 seconds.",
  "authors": [
    "Bstn1802"
  ],
  "contributors": [
    "NotRyken"
  ],
  "contact": {
    "homepage": "https://github.com/Bstn1802/AutoReconnect",
    "sources": "https://github.com/Bstn1802/AutoReconnect",
    "issues": "https://github.com/Bstn1802/AutoReconnect/issues"
  },
  "license": "LGPL-3.0",
  "icon": "assets/icon16.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "autoreconnect.AutoReconnect"
    ],
    "modmenu": [
      "autoreconnect.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "autoreconnect.mixins.json"
  ],
  "depends": {
    "java": ">=21",
    "fabric-api": "*",
    "fabricloader": ">=0.15.0",
    "minecraft": "~1.21"
  },
  "recommends": {
    "cloth-config": ">=${clothconfig_version}",
    "modmenu": ">=${modmenu_version}"
  }
}
